<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/single_event_view_layout_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/completed"
    android:elevation="10dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/single_event_view_layout_event_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="@string/event_name" />

    <TextView
        android:fontFamily="@font/antic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="2dp"
        android:text="@string/event_name"
        android:textColor="#FFF"
        android:textSize="20sp"/>

    <TextView
        android:fontFamily="@font/antic"
        android:id="@+id/single_event_view_layout_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/event_name"
        android:textColor="#FFF"
        android:textSize="20sp"/>

        <TextView
            android:fontFamily="@font/antic"
            android:id="@+id/single_event_view_layout_event_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="2dp"
            android:text="@string/event_description"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:fontFamily="@font/antic"
            android:id="@+id/single_event_view_layout_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/event_description"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:fontFamily="@font/antic"
            android:id="@+id/single_event_view_layout_event_timing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="2dp"
            android:text="@string/event_timing"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:fontFamily="@font/antic"
            android:id="@+id/single_event_view_layout_event_timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/event_timing"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:fontFamily="@font/antic"
            android:id="@+id/single_event_view_layout_event_link_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="2dp"
            android:text="@string/event_link"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:fontFamily="@font/antic"
            android:id="@+id/single_event_view_layout_event_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/event_link"
            android:textColor="#FFF"
            android:textSize="20sp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>