<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="developer.prasanth.spiritualtablets.AdminPanelActivity"
    android:background="@drawable/background_gradient">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/bungee"
            android:text="@string/admin_panel"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <Button
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:fontFamily="@font/lemonada"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:onClick="adminPanelAddEvent"
                android:text="@string/add_event" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <Button
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="@font/lemonada"
                android:layout_width="match_parent"
                android:onClick="adminPanelAddScrollingEvent"
                android:text="@string/add_scrolling_event" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <Button
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:onClick="adminPanelAddYoutubeVideo"
                android:fontFamily="@font/lemonada"
                android:text="@string/add_video" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <Button
                android:background="@android:color/transparent"
                android:fontFamily="@font/lemonada"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:onClick="adminPanelViewVolunteer"
                android:text="@string/volunteers_list" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <Button
                android:background="@android:color/transparent"
                android:fontFamily="@font/lemonada"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:onClick="adminPanelViewRapidRegisteredPatients"
                android:text="@string/rapid_registered_patients_list" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <Button
                android:background="@android:color/transparent"
                android:fontFamily="@font/lemonada"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:onClick="adminPanelViewRequestForCounselling"
                android:text="@string/requested_for_counselling" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>